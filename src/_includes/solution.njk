---
layout: base.njk
---

<div class="solution">
	{# link to homepage and current problem title #}
	<section class="header">
		<h2><a href="{{ '/' | url }}">Outline</a></h2>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 24 24"
			stroke="currentColor">
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				d="M8.25 4.5l7.5 7.5-7.5 7.5" />
		</svg>
		<h1>{{ title }}</h1>
	</section>

	{# list tags inline #}
	<section class="tags">
		{% for tag in tags %}
		<code>{{ tag }}</code>
		{% endfor %}
	</section>

	<article>
		{# External Problem URL: binarysearch, Leetcode or Coderbyte #}
		<span class="content">
			<strong>The Problem</strong>: {% mdExternalLink title, problemUrl %}
      {% set imgUrl = ['/assets/', platform, '.png'] | join %}
      <img src="{{ imgUrl | url }}" alt="{{ platform | capitalize }}" title="{{ platform | capitalize }}" />
		</span>

		{# Solution rendered from respective markdown files #}
		{{ content | safe }}
	</article>

	<section class="footer-navigation">
		{# navigate previous and next solution #} {% if prevSol.url %}
		<p>
			<strong>Previous Solution</strong>:
			<a class="previous" href="{{ prevSol.url | url }}">{{
				prevSol.data.title
			}}</a>
		</p>
		{% endif %} {% if nextSol.url %}
		<p>
			<strong>Next Solution</strong>:
			<a class="next" href="{{ nextSol.url | url }}">{{
				nextSol.data.title
			}}</a>
		</p>
		{% endif %}
	</section>
</div>
